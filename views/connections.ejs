<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/1b23973fb1.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Hahmlet:wght@500&family=Nunito+Sans:wght@300&display=swap" rel="stylesheet">
    <link rel='stylesheet' href="mentorConnections.css">
    <title>Document</title>
    <body id="bootstrap-overide">
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: azure;">
           
            <a class="navbar-brand" href="#">VirtualMentors</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
           
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                <a class="nav-item nav-link active" href="/home"><button type="button" class="btn btn-outline-primary">Back Home</button><span class="sr-only">(current)</span></a>
              </div>
            </div>
          
          </nav>
          



          <div class="container">
            <div class="container-fluid p-0">
            <h1 class="h3 mb-3 titles">Connection Requests</h1>
            <div class="row">
              <div class="col-xl-12">
                <div class="card">
                  <div class="card-header pb-0">
                    <div class="card-actions float-right">
                      <div class="dropdown show">
                        <a href="#" data-toggle="dropdown" data-display="static">
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal align-middle"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                        </a>
        
                        <div class="dropdown-menu dropdown-menu-right">
                          <a class="dropdown-item" href="#">Action</a>
                          <a class="dropdown-item" href="#">Another action</a>
                          <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                      </div>
                    </div>
                    
                   
                  </div>
                  <div class="card-body">
                    <table class="table table-bordered table-hover" style="width:100%">
                      <thead class="thead-dark">
                        <tr>
                          <th class="tags">Mentee Picture</th>
                          <th class="tags">Request From</th>
                          <th class="tags">Goals</th>
                          <th class="tags">Help With</th>
                          <th class="tags">Accept</th>
                          <th class="tags">Decline</th>
                        </tr>
                      </thead>
                      <tbody>
                        
                        <% let firstFilter = connections.filter(obj => obj.status != 'accepted')%>
                        <% console.log(firstFilter) %>
                        <% for(let i =0; i < firstFilter.length; i++) {%>
                        <tr>
                          <td class="tags"><img src="<%= firstFilter[i].img %>" width="32" height="32" class="rounded-circle my-n1" alt="Avatar"></td>
                          <td class="font tags"><%= firstFilter[i].mentee %></td>
                          <td class="font tags"><%= firstFilter[i].menteeGoals %></td>
                          <td class="font tags"><%= firstFilter[i].menteeStack %></td>
                          <td><i class="fas fa-check-square accept" data-test="<%= firstFilter[i]._id %>" data-mentee="<%= firstFilter[i].mentee%>"></i></td>
                          <td><i class="fas fa-user-minus delete" data-ID="<%= firstFilter[i]._id %>"></i></td>
                        </tr>
                        <% } %>
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              </div>
              </div>
              </div>
              
              <div class="container">
                <div class="container-fluid p-0">
                <h1 class="h3 mb-3 titles"><%= mentor[0].name[0].toUpperCase() + mentor[0].name.slice(1) %>'s Mentee's</h1>
                <div class="row">
                  <div class="col-xl-12">
                    <div class="card">
                      <div class="card-header pb-0">
                        <div class="card-actions float-right">
                          <div class="dropdown show">
                            <a href="#" data-toggle="dropdown" data-display="static">
                              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal align-middle"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                            </a>
            
                            <div class="dropdown-menu dropdown-menu-right">
                              <a class="dropdown-item" href="#">Action</a>
                              <a class="dropdown-item" href="#">Another action</a>
                              <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                          </div>
                        </div>
                        
                      </div>
                      <div class="card-body">
                        <table class="table table-bordered table-hover" style="width:100%">
                          <thead class="thead-dark">
                            <tr>
                              <th class="tags">Mentee Picture</th>
                              <th class="tags" scope="col">Mentee Name</th>
                              <th class="tags" scope="col">Goals</th>
                              <th class="tags" scope="col">Help With</th>
                              <th class="tags" scope="col">Send Message</th>
                              <th class="tags" scope="col">Withdraw Connection</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% let filter = connections.filter(obj=> obj.status === 'accepted') %>
                            <% for(let i =0; i < filter.length; i++) {%>
                            <tr>
                              <td><img src="<%= filter[i].img %>" width="32" height="32" class="rounded-circle my-n1" alt="Avatar"></td>
                              <td class="font tags"><%= filter[i].mentee %></td>
                              <td class="font goals"><%= filter[i].menteeGoals %></td>
                              <td class="font goals"><%= filter[i].menteeStack %></td>
                              <form action="/room" method="get">
                              <!-- <input type="hidden" value="<%= filter[i].mentee %>" name="mentee"> -->
                              <input type="hidden" value="<%= filter[i]._id %>" name="room">
                              <td class="tags"><button type="submit">Send Message</button></td>
                              </form>
                              <td><i class="fas fa-user-minus delete" data-id="<%= connections[i]._id %>"></i></td>
                            </tr>
                            <% } %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                  </div>
                  </div>
                  </div>






        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="connections.js"></script>
</body>
</head>
</html>