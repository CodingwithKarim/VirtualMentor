<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="room.css">
</head>

<body>
  <% console.log(connections[0].personalMessage) %>
    <div class="chat-container">
        <header class="chat-header">
          <h1><i class="fas fa-sms"></i> Private Chat</h1>
          <a id="leave-btn" href="/chatform" class="btn">Leave Room</a>
        </header>
        <main class="chat-main">
          <div class="chat-sidebar">
            
            
            <ul id="users">
            </ul>
          </div>
          <div class="chat-messages">
            <% if(connections[0].personalMessage.length > 0) {%>
            <% for(let i = 0; i < connections[0].personalMessage.length; i++) {%>
            <div class="message"> From: <%= connections[0].mentorName%>
              <p class="meta">
              <span></span>
                </p>
                <p class="text"> <%= connections[0].personalMessage[i] %></p>
            </div>
            <% } %>
            <% } %>
            </div>
          </main>

          <div class="chat-form-container">
            <form id="chat-form" action="/personalMessage" method="post">
              <input type="hidden" value="<%= connections[0]._id%>" name="id">
              <input
                id="msg"
                type="text"
                name="personalMessage"
                placeholder="Enter Message"
                required
                autocomplete="off"
              />
              <button class="btn"><i class="fas fa-paper-plane"></i> Send</button>
            </form>
          </div>
        </div>
         
        <script
        src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.9.2/qs.min.js"
        integrity="sha256-TDxXjkAUay70ae/QJBEpGKkpVslXaHHayklIVglFRT4="
        crossorigin="anonymous"
      ></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="room.js"></script>    
</body>
</html>